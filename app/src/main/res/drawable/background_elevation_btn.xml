        <shape android:shape="rectangle">
            <solid android:color="@color/surface" />
            <corners android:radius="@dimen/corner_m" />
            <padding android:bottom="@dimen/space_xs" android:left="@dimen/space_xs" android:right="@dimen/space_xs" android:top="@dimen/space_xs" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />
            <corners android:radius="@dimen/corner_m" />
            <padding android:bottom="@dimen/space_xs" android:left="@dimen/space_xs" android:right="@dimen/space_xs" android:top="@dimen/space_xs" />
        </shape>
    </item>
</selector>
